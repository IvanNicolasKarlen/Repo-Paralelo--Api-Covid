@model Entidades.DonacionesInsumos

@{
    ViewBag.Title = "Donación de insumos";
    Layout = "~/Views/Shared/_NecesidadesLayout.cshtml";
}
<br>
<br>
<center><h2>Donación de insumos</h2></center>

<div class="card mb-3 mt-5">
    <div class="card-body  mt-5">
        <h5 class="card-title text-center">Realizar donación de insumos</h5><br>


        @using (Html.BeginForm("DonacionInsumos", "DonacionInsumos", FormMethod.Post, new { @class = "login100-form validate-form p-b-33 p-t-5" }))
        {

            @Html.AntiForgeryToken()

            if (ViewBag.mensajeError != null) //Mensaje que esta en el controller.
            {
                <div class="p-3 mb-2 bg-danger text-white">@ViewBag.mensajeError</div>
            } <br />

            <center>
                Aceite:  @Html.EditorFor(model => model.Cantidad, new { htmlAttributes = new { min = 0, max = 50000 } })
                @Html.ValidationMessageFor(model => model.Cantidad, "", new { @class = "text-danger" }) <br />

                Fideos:  @Html.EditorFor(model => model.Cantidad, new { htmlAttributes = new { min = 0, max = 50000 } })
                @Html.ValidationMessageFor(model => model.Cantidad, "", new { @class = "text-danger" }) <br />

                Lavandina:  @Html.EditorFor(model => model.Cantidad, new { htmlAttributes = new { min = 0, max = 50000 } })
                @Html.ValidationMessageFor(model => model.Cantidad, "", new { @class = "text-danger" }) <br />

            </center>
            <br />

            <div class="col-md-12 btn-group mt-4">
                @Html.ActionLink("Cancelar", "IndexLogueado", "Home", null, new { @class = "btn btn-primary" })
                <button type="submit" class="btn btn-primary ml-2">Enviar</button>
            </div>
        }
    </div>
</div>
